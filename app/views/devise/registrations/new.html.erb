<div class="login-form">
 <div class="login-text">
<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>


<div class="field">
    <%= f.label :呼んで欲しい名前 %><br />
    <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname", class: "login-username", placeholder: "8文字以内" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "login-username", placeholder: "Email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %><br/>
    <em>(<%= @minimum_password_length %> 文字以内)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "login-password", placeholder: "Password"  %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "login-password", placeholder: "Password"  %><br/>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

<div class="underlay-photo"></div>
<div class="underlay-black"></div> 
</div>
</div>